<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.exbawei.liteli.gongye.view.MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/ll"
   android:background="@drawable/lanse"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="32dp"
            android:layout_height="22dp"
            android:text="推荐"
            android:textColor="#FF333333"
            android:textSize="13sp"
            android:id="@+id/tvTui"
            />
        <View
            android:layout_width="30dp"
            android:layout_height="2dp"
            android:background="#FF333333"
            android:id="@+id/v1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="32dp"
            android:layout_height="22dp"
            android:text="关注"
            android:textColor="#FF333333"
            android:textSize="13sp"
            android:id="@+id/tvGuan"

            />
        <View
            android:layout_width="30dp"
            android:layout_height="2dp"
            android:background="#FF333333"
            android:id="@+id/v2"

            />
    </LinearLayout>
</LinearLayout>

<android.support.v4.view.ViewPager
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/ll"
    android:id="@+id/vp"></android.support.v4.view.ViewPager>
<ImageView
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:background="@drawable/xie"
    android:layout_alignParentRight="true"
    android:layout_marginRight="13dp"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="70dp"
    android:id="@+id/xie"
    />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/geren"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="13dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:id="@+id/geren"
        />
</RelativeLayout>
